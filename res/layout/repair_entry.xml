<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    binding:onClick="DetailCmd" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="left|center_vertical" >

               <TextView
                   android:id="@+id/textView2"
                   android:layout_width="48dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="2dp"
                   android:gravity="right"
                   android:text="工单状态"
                   android:textSize="12sp" />

            <EditText
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:enabled="false"
                android:textSize="12sp"
                android:textColor="#FF0000"
                binding:text="f_downloadstatus" />
            <TextView
                   android:id="@+id/textView2"
                   android:layout_width="48dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="2dp"
                   android:gravity="right"
                   android:text="工作日(天)"
                   android:textSize="12sp" />

            <EditText
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:enabled="false"
                android:textSize="12sp"
                android:textColor="#FF0000"
                binding:text="f_workingdays" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="right|center_vertical" >

               <TextView
                   android:id="@+id/textView2"
                   android:layout_width="48dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="2dp"
                   android:gravity="right"
                   android:text="派单人"
                   android:textSize="12sp" />

            <EditText
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:enabled="false"
                android:textSize="12sp"
                binding:text="SENDER" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修单号"
                android:textSize="12sp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginRight="2dp"
                android:enabled="false"
                android:textSize="12sp"
                binding:text="CUCODE" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="用户姓名"
                android:textSize="12sp" />

            <EditText
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:enabled="false"
                android:textSize="12sp"
                binding:text="USERNAME" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来电号码"
                android:textSize="12sp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginRight="2dp"
                android:enabled="false"
                android:textSize="12sp"
                binding:text="PHONE" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="派单时间"
                android:textSize="12sp" />

            <EditText
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:enabled="false"
                android:textSize="12sp"
                binding:text="SENDTIME" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接受状态"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/uploadicon"
                    binding:visibility="MUTED" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/uploadfail"
                    binding:visibility="NOT(MUTED)" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>