<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/initialize_bg"
    android:gravity="center_vertical"
    android:orientation="vertical" >

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:gravity="center_horizontal"
                   android:orientation="vertical" >

                   <Button
                       android:id="@+id/setButton"
                       android:layout_width="150dp"
                       android:layout_height="50dp"
                       android:layout_gravity="center_horizontal"
                       android:background="@drawable/ggsz_btnxml" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="更改设置"
                       android:textSize="15sp" />
                   
                   <Button
                       android:id="@+id/goUploadButton"
                       android:layout_width="150dp"
                       android:layout_height="50dp"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center_horizontal"
                       android:background="@drawable/jrsc_btnxml" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="批量上传"
                       android:textSize="15sp" />
                   
                   <Button
                       android:id="@+id/saveButton"
                       android:layout_width="150dp"
                       android:layout_height="50dp"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="10dp"
                       android:background="@drawable/ksgz_btnxml" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="开始工作"
                       android:textSize="15sp" />
                   
                   <Button
                       android:id="@+id/showhisButton"
                       android:layout_width="150dp"
                       android:layout_height="50dp"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="10dp"
                       android:background="@drawable/showhis_btnxml" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="查看历史工单"
                       android:textSize="15sp" />

               </LinearLayout>
               
</LinearLayout>